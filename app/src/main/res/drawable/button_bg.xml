<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default state -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#4285F4"/> <!-- Button background color -->
            <corners android:radius="8dp"/> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3367D6"/> <!-- Button background color when pressed -->
            <corners android:radius="8dp"/> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>

</selector>
